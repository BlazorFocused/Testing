<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup Label="NuGet Metadata">
    <Title>BlazorFocused.Testing.Http</Title>
    <PackageId>BlazorFocused.Testing.Http</PackageId>
    <PackageTags>dotnet;c-sharp;http-client</PackageTags>
    <Description>Testing tools for simulating http requests</Description>
  </PropertyGroup>

  <ItemGroup Label="NuGet Packages">
    <PackageReference Include="Microsoft.Extensions.Http" />
  </ItemGroup>

  <ItemGroup Label="Internals">
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
      <_Parameter1>
        $(AssemblyName).Test, 
      </_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

</Project>
